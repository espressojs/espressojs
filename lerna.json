{
  "packages": [
    "packages/*"
  ],
  "npmClient": "npm",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": [
        "*.md",
        "*.sh"
      ],
      "message": "chore: published artifacts"
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "version": "independent"
}